<p id="notice"><%= notice %></p>

<h1>
  <%= @listing.title %>
</h1>

<h2>Book</h2>
<p>
  <%= @listing.cents_to_dollars(@night_fee_cents) %> per night
</p>
<%= form_with(model: @new_booking, local: true) do |f| %>
  <div>
    <%= f.label :check_in_date, 'Check in:' %>
    <%= f.date_field :check_in_date %>
  </div>

  <div>
    <%= f.label :check_out_date, 'Check out:' %>
    <%= f.date_field :check_out_date %>
  </div>

  <div>
    <%= f.label :guest_count %>
    <%= f.number_field :guest_count %>
  </div>

  <%= f.button 'Book' %>

<% end %>


<p>
  <strong>Street address:</strong>
  <%= @listing.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @listing.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @listing.country.name %>
</p>

<p>
  <strong>Coords:</strong>
  <%= @listing.latitude %>, <%= @listing.longitude %>
</p>

<p>
  <strong>Bed count:</strong>
  <%= @listing.bed_count %>
</p>

<p>
  <strong>Bedroom count:</strong>
  <%= @listing.bedroom_count %>
</p>

<p>
  <strong>Bathroom count:</strong>
  <%= @listing.bathroom_count %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Cleaning fee cents:</strong>
  <%= @listing.cents_to_dollars(@cleaning_fee_cents) %>
</p>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
